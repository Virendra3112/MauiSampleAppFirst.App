<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSampleAppFirst.Views.DateTimePickerSamplePage"
             Title="DateTimePickerSamplePage">
    <VerticalStackLayout>
        
        <Label 
            Text="Select Time"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="Black" FontSize="Medium"
            FontAttributes="Bold"/>

        <TimePicker x:Name="timePicker" BackgroundColor="Gray" />


        <Label 
            Text="Select Date"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="Black" FontSize="Medium"
            FontAttributes="Bold"/>

        <DatePicker x:Name="datePicker" BackgroundColor="Gray"  />



    </VerticalStackLayout>
</ContentPage>