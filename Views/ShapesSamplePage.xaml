<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSampleAppFirst.Views.ShapesSamplePage"
             Title="ShapesSamplePage">
    <VerticalStackLayout>

        <!--<BoxView HeightRequest="200" WidthRequest="200" BackgroundColor="Red">
            <BoxView.Clip>
                <EllipseGeometry RadiusX="100"
                         RadiusY="100"
                         Center="100,100" />
            </BoxView.Clip>
        </BoxView>-->

        <Ellipse Fill="Red" 
         WidthRequest="100"
         HeightRequest="100"
         HorizontalOptions="Center" />

        <Line X1="0"
      Y1="20"
      X2="400"
      Y2="20"
      StrokeLineCap="Round"
      Stroke="Green"
      StrokeThickness="15" />
        

        <Polygon Points="20,20 100,40,80,20"
         Fill="Black"
         Stroke="Blue"
         StrokeThickness="10" />

        <HorizontalStackLayout BackgroundColor="Black" HorizontalOptions="FillAndExpand">

        <Polyline Points="0,0 10,30 15,0 18,60 23,30 35,30 40,0 43,60 48,30 100,30"
          Stroke="Red" />

        </HorizontalStackLayout>

        <Rectangle Fill="Green"
           WidthRequest="100"
           HeightRequest="200"
           HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>